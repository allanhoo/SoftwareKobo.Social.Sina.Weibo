<Page
    x:Class="Test.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBlock>分享文本</TextBlock>
                <TextBox PlaceholderText="输入分享的文本" x:Name="txtShareText"></TextBox>
                <Button Content="分享文本" Click="BtnShareText_Click"></Button>
            </StackPanel>
            <StackPanel Margin="0,20,0,0" Orientation="Vertical">
                <TextBlock>分享图片</TextBlock>
                <TextBox PlaceholderText="图片说明" x:Name="txtShareImage"></TextBox>
                <Image Source="/Assets/唱歌1.png" Stretch="None"></Image>
                <Button Content="分享图片" Click="BtnShareImage_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
